<?xml version="1.0"?>
<!DOCTYPE CodeBlocks_compiler>
<CodeBlocks_compiler name="GCC with Simplecpp"
                     id="simplecpp"
                     weight="2">
    <Path type="master">
        <Search envVar="PATH"
                for="C"/>
        <if platform="windows">
            <Search path="%ProgramFiles%\MinGW"/>
            <Fallback path="C:\MinGW"/>
        </if>
        <else>
            <Fallback path="/usr"/>
        </else>
    </Path>
    <if platform="windows">
        <Path type="include">
            <Add><master/>\include</Add>
        </Path>
        <Path type="lib">
            <Add><master/>\lib-mingw</Add>
        </Path>
    </if>
    <else>
        <Path type="include">
            <Add><master/>/include</Add>
        </Path>
        <Path type="lib">
            <Add><master/>/lib</Add>
        </Path>
    </else>
    <Add lib="simplecpp"/>
        <Add lib="glfw3"/>
        <Add lib="gdi32"/>
        <Add lib="glew32s"/>
        <Add lib="glew32"/>
        <Add lib="SOIL"/>
        <Add lib="opengl32"/>
        <Add extra="-std=c++17"/>
        
</CodeBlocks_compiler>
